{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react-jsx",
    "module": "ESNext",
    //"rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ],
      "I18n": [
        "src/07-shared/config/i18n/*"
      ]
    },
    "allowJs": true,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/testSetup.ts",
    "src/**/*"
  ]
}
